---
import Layout from '@/layouts/Layout.astro';
import Navigation from '@/components/Navigation.astro';
import Footer from '@/components/Footer.astro';

const business = {
	name: 'Home Tutor Excellence',
	city: 'Mumbai',
	category: 'Services',
	description: 'Professional home tutoring for students from grade 1-12 in Math, Science, and English with personalized learning approaches. Our experienced tutors provide one-on-one attention to help students excel academically.',
	rating: 4.7,
	reviews: 203,
	image: 'https://images.pexels.com/photos/5212345/pexels-photo-5212345.jpeg?auto=compress&cs=tinysrgb&w=800',
	phone: '+919876543212',
	email: 'hometutor.excellence@gmail.com',
	address: 'Bandra West, Mumbai, Maharashtra 400050',
	specialties: ['CBSE Math', 'Science Tuition', 'English Grammar', 'Exam Preparation', 'Homework Help'],
	verified: true,
	established: '2018',
	operatingHours: 'Mon-Sat: 4:00 PM - 8:00 PM',
	priceRange: '‚Çπ500 - ‚Çπ1500 per session',
	gallery: [
		'https://images.pexels.com/photos/5212345/pexels-photo-5212345.jpeg?auto=compress&cs=tinysrgb&w=600',
		'https://images.pexels.com/photos/5427674/pexels-photo-5427674.jpeg?auto=compress&cs=tinysrgb&w=600',
		'https://images.pexels.com/photos/4145190/pexels-photo-4145190.jpeg?auto=compress&cs=tinysrgb&w=600'
	]
};

const structuredData = {
	"@context": "https://schema.org",
	"@type": "LocalBusiness",
	"name": business.name,
	"description": business.description,
	"url": "https://the-local-basket.vercel.app/mumbai/services/home-tutor-excellence",
	"telephone": business.phone,
	"email": business.email,
	"address": {
		"@type": "PostalAddress",
		"streetAddress": business.address,
		"addressLocality": "Mumbai",
		"addressRegion": "Maharashtra",
		"addressCountry": "IN"
	},
	"aggregateRating": {
		"@type": "AggregateRating",
		"ratingValue": business.rating,
		"reviewCount": business.reviews,
		"bestRating": 5,
		"worstRating": 1
	},
	"image": business.image,
	"priceRange": business.priceRange,
	"openingHours": "Mo-Sa 16:00-20:00",
	"foundingDate": business.established,
	"serviceType": "Home Tutoring",
	"paymentAccepted": "Cash, UPI, Bank Transfer"
};

const faqData = {
	"@context": "https://schema.org",
	"@type": "FAQPage",
	"mainEntity": [
		{
			"@type": "Question",
			"name": "What subjects do your home tutors teach in Mumbai?",
			"acceptedAnswer": {
				"@type": "Answer",
				"text": "Our experienced tutors provide personalized home tutoring for Mathematics, Science (Physics, Chemistry, Biology), English Grammar, Social Studies, and Hindi for students from grade 1-12. We specialize in CBSE, ICSE, and State Board curricula."
			}
		},
		{
			"@type": "Question",
			"name": "How much do home tutoring sessions cost?",
			"acceptedAnswer": {
				"@type": "Answer",
				"text": "Our tutoring sessions range from ‚Çπ500 to ‚Çπ1500 per session, depending on the subject, grade level, and duration. We offer flexible packages for weekly and monthly tutoring with attractive discounts for regular students."
			}
		},
		{
			"@type": "Question",
			"name": "Do you provide tutors for competitive exam preparation?",
			"acceptedAnswer": {
				"@type": "Answer",
				"text": "Yes, we have specialized tutors for JEE, NEET, CET, and other competitive exams. Our tutors focus on concept building, problem-solving techniques, and exam strategies to help students achieve their goals."
			}
		},
		{
			"@type": "Question",
			"name": "What areas in Mumbai do you serve?",
			"acceptedAnswer": {
				"@type": "Answer",
				"text": "We provide home tutoring services across Mumbai including Bandra, Andheri, Juhu, Santa Cruz, Khar, Malad, Borivali, and surrounding areas. We carefully match tutors based on location for convenience."
			}
		},
		{
			"@type": "Question",
			"name": "How do you ensure quality of teaching?",
			"acceptedAnswer": {
				"@type": "Answer",
				"text": "All our tutors are qualified graduates with teaching experience. We conduct regular assessments, provide study materials, and maintain constant communication with parents to track student progress and improvement."
			}
		}
	]
};
---

<Layout
	title="Home Tutor Excellence ‚Äì Tutoring Services, Mumbai"
	description="Expert home tutoring for grades 1-12 in Math, Science & English in Mumbai. Personalized learning with experienced tutors. ‚≠ê4.7/5 rating. Call +91 98765 43212"
	keywords="home tutor Mumbai, private tuition Mumbai, CBSE math tutor, science tuition, English grammar, exam preparation, homework help, home based tutoring Mumbai, personalized education Mumbai, one on one tutoring, mathematics coaching, physics chemistry tutor, board exam preparation, competitive exam coaching, home teacher Mumbai, qualified tutors Mumbai"
	structuredData={structuredData}
>
	<script type="application/ld+json" set:html={JSON.stringify(faqData)} />
	<Navigation />
	
	<main>
		<section class="business-hero">
			<div class="container">
				<div class="hero-content">
					<div class="business-header">
						<div class="business-info">
							{business.verified && <div class="verified-badge">‚úì Verified Business</div>}
							<h1>{business.name}</h1>
							<p class="business-category">{business.category} ‚Ä¢ {business.city}</p>
							<div class="business-rating">
								<span class="stars">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</span>
								<span class="rating-text">{business.rating}/5 ({business.reviews} reviews)</span>
							</div>
						</div>
						<div class="business-image">
							<img src={business.image} alt={`${business.name} - ${business.description}`} />
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="business-details">
			<div class="container">
				<div class="details-grid">
					<div class="main-content">
						<div class="about-section">
							<h2>About {business.name}</h2>
							<p>{business.description}</p>
							
							<div class="specialties-section">
								<h3>Our Services</h3>
								<div class="specialties-grid">
									{business.specialties.map(specialty => (
										<span class="specialty-tag">{specialty}</span>
									))}
								</div>
							</div>
						</div>

						<div class="gallery-section">
							<h3>Our Teaching Environment</h3>
							<div class="gallery-grid">
								{business.gallery.map((image, index) => (
									<img src={image} alt={`${business.name} teaching environment ${index + 1}`} loading="lazy" />
								))}
							</div>
						</div>
					</div>

					<div class="sidebar">
						<div class="contact-card">
							<h3>Contact Information</h3>
							<div class="contact-info">
								<div class="contact-item">
									<span class="contact-icon">üìû</span>
									<div>
										<strong>Phone</strong>
										<p><a href={`tel:${business.phone}`}>{business.phone}</a></p>
									</div>
								</div>
								
								<div class="contact-item">
									<span class="contact-icon">üìß</span>
									<div>
										<strong>Email</strong>
										<p><a href={`mailto:${business.email}`}>{business.email}</a></p>
									</div>
								</div>
								
								<div class="contact-item">
									<span class="contact-icon">üìç</span>
									<div>
										<strong>Service Area</strong>
										<p>{business.address}</p>
									</div>
								</div>
								
								<div class="contact-item">
									<span class="contact-icon">üïí</span>
									<div>
										<strong>Hours</strong>
										<p>{business.operatingHours}</p>
									</div>
								</div>
								
								<div class="contact-item">
									<span class="contact-icon">üí∞</span>
									<div>
										<strong>Pricing</strong>
										<p>{business.priceRange}</p>
									</div>
								</div>
							</div>
							
							<div class="contact-actions">
								<a href={`tel:${business.phone}`} class="btn btn-primary">üìû Call Now</a>
								<a href={`https://wa.me/${business.phone.replace(/[^0-9]/g, '')}`} class="btn btn-secondary" target="_blank" rel="noopener">üí¨ WhatsApp</a>
								<a href={`mailto:${business.email}`} class="btn btn-outline">üìß Email</a>
							</div>
						</div>

						<div class="business-stats">
							<h3>Service Stats</h3>
							<div class="stats-grid">
								<div class="stat">
									<strong>Est. {business.established}</strong>
									<span>Years of Experience</span>
								</div>
								<div class="stat">
									<strong>{business.reviews}+</strong>
									<span>Students Taught</span>
								</div>
								<div class="stat">
									<strong>{business.rating}/5</strong>
									<span>Average Rating</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="faq-section">
			<div class="container">
				<h2>Frequently Asked Questions</h2>
				<div class="faq-grid">
					<div class="faq-item">
						<h3>What subjects do your home tutors teach in Mumbai?</h3>
						<p>Our experienced tutors provide personalized home tutoring for Mathematics, Science (Physics, Chemistry, Biology), English Grammar, Social Studies, and Hindi for students from grade 1-12. We specialize in CBSE, ICSE, and State Board curricula.</p>
					</div>
					
					<div class="faq-item">
						<h3>How much do home tutoring sessions cost?</h3>
						<p>Our tutoring sessions range from ‚Çπ500 to ‚Çπ1500 per session, depending on the subject, grade level, and duration. We offer flexible packages for weekly and monthly tutoring with attractive discounts for regular students.</p>
					</div>
					
					<div class="faq-item">
						<h3>Do you provide tutors for competitive exam preparation?</h3>
						<p>Yes, we have specialized tutors for JEE, NEET, CET, and other competitive exams. Our tutors focus on concept building, problem-solving techniques, and exam strategies to help students achieve their goals.</p>
					</div>
					
					<div class="faq-item">
						<h3>What areas in Mumbai do you serve?</h3>
						<p>We provide home tutoring services across Mumbai including Bandra, Andheri, Juhu, Santa Cruz, Khar, Malad, Borivali, and surrounding areas. We carefully match tutors based on location for convenience.</p>
					</div>
					
					<div class="faq-item">
						<h3>How do you ensure quality of teaching?</h3>
						<p>All our tutors are qualified graduates with teaching experience. We conduct regular assessments, provide study materials, and maintain constant communication with parents to track student progress and improvement.</p>
					</div>
				</div>
			</div>
		</section>

		<section class="related-businesses">
			<div class="container">
				<h2>Other Service Providers in Mumbai</h2>
				<div class="related-grid">
					<div class="related-card">
						<img src="https://images.pexels.com/photos/3985359/pexels-photo-3985359.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Beauty at Home" />
						<h4>Beauty at Home</h4>
						<p>Professional beauty and wellness services</p>
						<span class="btn btn-outline disabled" aria-disabled="true" style="opacity:0.6;cursor:not-allowed;">View Details</span>
					</div>
				</div>
			</div>
		</section>
	</main>
	
	<Footer />
</Layout>

<style>
	.business-hero {
		background: var(--primary-beige);
		padding: 2rem 0;
	}

	.business-header {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 2rem;
		align-items: center;
	}

	.verified-badge {
		background: var(--primary-green);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.875rem;
		font-weight: 600;
		display: inline-block;
		margin-bottom: 1rem;
	}

	.business-info h1 {
		font-size: 2.5rem;
		color: var(--neutral-800);
		margin-bottom: 0.5rem;
	}

	.business-category {
		color: var(--neutral-600);
		font-size: 1.2rem;
		margin-bottom: 1rem;
	}

	.business-rating {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.stars {
		color: #ffd700;
		font-size: 1.2rem;
	}

	.rating-text {
		color: var(--neutral-600);
		font-weight: 500;
	}

	.business-image {
		border-radius: 12px;
		overflow: hidden;
		box-shadow: var(--shadow-lg);
	}

	.business-image img {
		width: 100%;
		height: 300px;
		object-fit: cover;
	}

	.business-details {
		padding: 3rem 0;
	}

	.details-grid {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 3rem;
	}

	.about-section h2 {
		font-size: 2rem;
		color: var(--neutral-800);
		margin-bottom: 1rem;
	}

	.about-section p {
		color: var(--neutral-600);
		line-height: 1.8;
		margin-bottom: 2rem;
		font-size: 1.1rem;
	}

	.specialties-section h3 {
		font-size: 1.5rem;
		color: var(--neutral-800);
		margin-bottom: 1rem;
	}

	.specialties-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		margin-bottom: 2rem;
	}

	.specialty-tag {
		background: var(--primary-orange);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.9rem;
		font-weight: 500;
	}

	.gallery-section h3 {
		font-size: 1.5rem;
		color: var(--neutral-800);
		margin-bottom: 1rem;
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1rem;
	}

	.gallery-grid img {
		width: 100%;
		height: 200px;
		object-fit: cover;
		border-radius: 8px;
		box-shadow: var(--shadow-sm);
		transition: transform 0.3s ease;
	}

	.gallery-grid img:hover {
		transform: scale(1.05);
	}

	.sidebar {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.contact-card,
	.business-stats {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: var(--shadow-md);
	}

	.contact-card h3,
	.business-stats h3 {
		font-size: 1.5rem;
		color: var(--neutral-800);
		margin-bottom: 1.5rem;
	}

	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		margin-bottom: 2rem;
	}

	.contact-item {
		display: flex;
		gap: 1rem;
		align-items: start;
	}

	.contact-icon {
		font-size: 1.5rem;
		flex-shrink: 0;
	}

	.contact-item strong {
		display: block;
		color: var(--neutral-800);
		margin-bottom: 0.25rem;
	}

	.contact-item p {
		color: var(--neutral-600);
		margin: 0;
	}

	.contact-item a {
		color: var(--primary-orange);
		text-decoration: none;
		font-weight: 500;
	}

	.contact-item a:hover {
		text-decoration: underline;
	}

	.contact-actions {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.contact-actions .btn {
		text-align: center;
		padding: 0.75rem;
		font-weight: 600;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1rem;
	}

	.stat {
		text-align: center;
		padding: 1rem;
		background: var(--neutral-100);
		border-radius: 8px;
	}

	.stat strong {
		display: block;
		font-size: 1.5rem;
		color: var(--primary-orange);
		margin-bottom: 0.25rem;
	}

	.stat span {
		color: var(--neutral-600);
		font-size: 0.9rem;
	}

	.related-businesses {
		padding: 3rem 0;
		background: var(--neutral-100);
	}

	.related-businesses h2 {
		font-size: 2rem;
		color: var(--neutral-800);
		text-align: center;
		margin-bottom: 2rem;
	}

	.related-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.related-card {
		background: white;
		border-radius: 12px;
		box-shadow: var(--shadow-sm);
		overflow: hidden;
		text-align: center;
		padding: 1.5rem;
	}

	.related-card img {
		width: 100%;
		height: 150px;
		object-fit: cover;
		border-radius: 8px;
		margin-bottom: 1rem;
	}

	.related-card h4 {
		color: var(--neutral-800);
		margin-bottom: 0.5rem;
	}

	.related-card p {
		color: var(--neutral-600);
		margin-bottom: 1rem;
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.business-header {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.business-info h1 {
			font-size: 2rem;
		}

		.details-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.contact-actions {
			flex-direction: column;
		}

		.gallery-grid {
			grid-template-columns: 1fr;
		}
	}

	.faq-section {
		padding: 4rem 0;
		background: var(--neutral-50);
	}

	.faq-section h2 {
		font-size: 2.5rem;
		color: var(--neutral-800);
		text-align: center;
		margin-bottom: 3rem;
	}

	.faq-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 2rem;
		max-width: 1000px;
		margin: 0 auto;
	}

	.faq-item {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: var(--shadow-sm);
		border-left: 4px solid var(--primary-blue);
	}

	.faq-item h3 {
		color: var(--neutral-800);
		font-size: 1.25rem;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.faq-item p {
		color: var(--neutral-600);
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.faq-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
		
		.faq-item {
			padding: 1.5rem;
		}
	}
</style>
</Layout>