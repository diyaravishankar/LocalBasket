---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const blogPosts = [
	{
		id: 'top-10-homemade-pickles-chennai-2025',
		title: 'Top 10 Homemade Pickles in Chennai You Must Try',
		excerpt: 'Discover the best homemade pickle makers in Chennai offering authentic South Indian varieties made with traditional recipes. From spicy mango to tangy lime pickles.',
		image: 'https://images.pexels.com/photos/4394421/pexels-photo-4394421.jpeg?auto=compress&cs=tinysrgb&w=600',
		date: '2025-01-15',
		author: 'Priya Sharma',
		category: 'Food Guide',
		readTime: '8 min read',
		keywords: 'homemade pickles Chennai, South Indian pickles, traditional pickle makers, mango pickle Chennai'
	},
	{
		id: 'start-home-bakery-business-india-2025',
		title: 'How to Start a Home-Based Bakery Business in India',
		excerpt: 'Complete step-by-step guide to starting your own profitable home bakery business in India. Learn about licensing, equipment, marketing strategies, and customer acquisition.',
		image: 'https://images.pexels.com/photos/1070850/pexels-photo-1070850.jpeg?auto=compress&cs=tinysrgb&w=600',
		date: '2025-01-12',
		author: 'Amit Kumar',
		category: 'Business Guide',
		readTime: '12 min read',
		keywords: 'home bakery business India, start bakery from home, home food business license, bakery business plan'
	},
	{
		id: 'best-handmade-craft-businesses-bangalore-2025',
		title: 'Best Handmade Craft Businesses in Bangalore',
		excerpt: 'Explore unique handmade craft businesses in Bangalore creating beautiful artwork, custom jewelry, and home d√©cor items. Support local artisans and discover one-of-a-kind pieces.',
		image: 'https://images.pexels.com/photos/1454360/pexels-photo-1454360.jpeg?auto=compress&cs=tinysrgb&w=600',
		date: '2025-01-10',
		author: 'Maya Patel',
		category: 'Craft Guide',
		readTime: '6 min read',
		keywords: 'handmade crafts Bangalore, local artisans Bangalore, custom jewelry makers, handmade home decor'
	},
	{
		id: 'quality-home-tutoring-services-mumbai-2025',
		title: 'Finding Quality Home Tutoring Services in Mumbai',
		excerpt: 'A comprehensive guide to finding the best home tutoring services in Mumbai for your child\'s academic success. Tips for choosing qualified tutors and ensuring quality education.',
		image: 'https://images.pexels.com/photos/5212345/pexels-photo-5212345.jpeg?auto=compress&cs=tinysrgb&w=600',
		date: '2025-01-08',
		author: 'Rohit Mehta',
		category: 'Service Guide',
		readTime: '7 min read',
		keywords: 'home tutoring Mumbai, private tutors Mumbai, home tuition services, quality education at home'
	},
	{
		id: 'legal-requirements-home-business-india-2025',
		title: 'Legal Requirements for Starting a Home Business in India',
		excerpt: 'Understanding the complete legal framework, required licenses, and regulations you need to know before starting your home business in India. Stay compliant and avoid legal issues.',
		image: 'https://images.pexels.com/photos/5668858/pexels-photo-5668858.jpeg?auto=compress&cs=tinysrgb&w=600',
		date: '2025-01-05',
		author: 'Anjali Singh',
		category: 'Legal Guide',
		readTime: '10 min read',
		keywords: 'home business legal requirements India, business license from home, home business registration, legal compliance'
	},
	{
		id: 'marketing-home-business-social-media-2025',
		title: 'Marketing Your Home Business on Social Media',
		excerpt: 'Effective social media marketing strategies for home businesses to reach local customers, build brand awareness, and increase sales. Learn platform-specific tactics and content ideas.',
		image: 'https://images.pexels.com/photos/267350/pexels-photo-267350.jpeg?auto=compress&cs=tinysrgb&w=600',
		date: '2025-01-03',
		author: 'Karan Joshi',
		category: 'Marketing Guide',
		readTime: '9 min read',
		keywords: 'home business social media marketing, local business marketing, Instagram for home business, Facebook marketing tips'
	}
];

const structuredData = {
	"@context": "https://schema.org",
	"@type": "Blog",
	"name": "LocalBasket Blog",
	"description": "Tips, guides, and insights for home business owners and local customers",
	"url": "https://the-local-basket.vercel.app/blog",
	"blogPost": blogPosts.map(post => ({
		"@type": "BlogPosting",
		"headline": post.title,
		"description": post.excerpt,
		"url": `https://the-local-basket.vercel.app/blog/${post.id}`,
		"keywords": post.keywords,
		"datePublished": post.date,
		"dateModified": post.date,
		"author": {
			"@type": "Person",
			"name": post.author
		},
		"image": post.image,
		"publisher": {
			"@type": "Organization",
			"name": "LocalBasket",
			"logo": {
				"@type": "ImageObject",
				"url": "https://the-local-basket.vercel.app/logo.png"
			}
		},
		"mainEntityOfPage": {
			"@type": "WebPage",
			"@id": `https://the-local-basket.vercel.app/blog/${post.id}`
		}
	}))
};
---

<Layout
	title="LocalBasket Blog - Home Business Tips, Local Guides & Entrepreneur Stories"
	description="Get expert tips for starting and growing home businesses, discover local food gems, craft makers, and service providers. Stay updated with the latest trends in home entrepreneurship and community commerce."
	keywords="home business tips, local business guide, home food business, craft business ideas, home service business, home entrepreneur blog, local business marketing"
	structuredData={structuredData}
	canonicalUrl="/blog"
>
	<Navigation />
	
	<main>
		<section class="blog-header">
			<div class="container">
				<h1>LocalBasket Blog - Home Business Hub</h1>
				<p>Expert tips, comprehensive guides, and inspiring stories from India's thriving home business community</p>
				<div class="blog-stats">
					<div class="blog-stat">
						<strong>50+</strong>
						<span>Expert Articles</span>
					</div>
					<div class="blog-stat">
						<strong>10,000+</strong>
						<span>Monthly Readers</span>
					</div>
					<div class="blog-stat">
						<strong>500+</strong>
						<span>Success Stories</span>
					</div>
				</div>
			</div>
		</section>

		<section class="blog-content">
			<div class="container">
				<div class="blog-grid">
					<div class="blog-main">
						<div class="featured-post">
							<h2>üåü Featured Article</h2>
							<article class="featured-article">
								<div class="featured-image">
									<img src={blogPosts[0].image} alt={blogPosts[0].title} loading="lazy" />
								</div>
								<div class="featured-content">
									<div class="post-meta">
										<span class="category">{blogPosts[0].category}</span>
										<span class="date">{new Date(blogPosts[0].date).toLocaleDateString('en-IN', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
									</div>
									<h3><a href={`/blog/${blogPosts[0].id}`}>{blogPosts[0].title}</a></h3>
									<p>{blogPosts[0].excerpt}</p>
									<div class="post-footer">
										<span class="author">By {blogPosts[0].author}</span>
										<span class="read-time">{blogPosts[0].readTime}</span>
									</div>
								</div>
							</article>
						</div>

						<div class="blog-posts">
							<h2>üìö Latest Expert Guides</h2>
							<div class="posts-grid">
								{blogPosts.slice(1).map(post => (
									<article class="blog-post">
										<div class="post-image">
											<img src={post.image} alt={post.title} loading="lazy" />
										</div>
										<div class="post-content">
											<div class="post-meta">
												<span class="category">{post.category}</span>
												<span class="date">{new Date(post.date).toLocaleDateString('en-IN', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
											</div>
											<h3><a href={`/blog/${post.id}`}>{post.title}</a></h3>
											<p>{post.excerpt}</p>
											<div class="post-footer">
												<span class="author">By {post.author}</span>
												<span class="read-time">{post.readTime}</span>
											</div>
										</div>
									</article>
								))}
							</div>
						</div>
					</div>

					<div class="blog-sidebar">
						<div class="sidebar-section">
							<h3>üìÇ Popular Categories</h3>
							<ul class="category-list">
								<li><a href="/blog?category=food-guide">üçΩÔ∏è Food Business Guides</a></li>
								<li><a href="/blog?category=business-guide">üíº Business Startup Tips</a></li>
								<li><a href="/blog?category=craft-guide">üé® Craft Business Ideas</a></li>
								<li><a href="/blog?category=service-guide">‚öôÔ∏è Service Business Tips</a></li>
								<li><a href="/blog?category=legal-guide">‚öñÔ∏è Legal & Compliance</a></li>
								<li><a href="/blog?category=marketing-guide">üìà Marketing Strategies</a></li>
							</ul>
						</div>

						<div class="sidebar-section">
							<h3>üîó Quick Links</h3>
							<ul class="quick-links">
								<li><a href="/directory">üè™ Browse Local Businesses</a></li>
								<li><a href="/submit-business">üìù List Your Business</a></li>
								<li><a href="/about">‚ÑπÔ∏è About LocalBasket</a></li>
							</ul>
						</div>

						<div class="sidebar-section newsletter">
							<h3>üìß Weekly Business Tips</h3>
							<p>Get expert tips, success stories, and exclusive guides delivered to your inbox every week</p>
							<form class="newsletter-form" id="blog-newsletter">
								<input type="email" placeholder="Enter your email address" required aria-label="Email for newsletter" />
								<button type="submit" class="btn btn-primary">Get Weekly Tips</button>
							</form>
							<p class="newsletter-disclaimer">Join 5,000+ entrepreneurs. Unsubscribe anytime.</p>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
	
	<Footer />
</Layout>

<style>
	.blog-header {
		background: var(--primary-orange);
		padding: 3rem 0;
		text-align: center;
		color: white;
	}

	.blog-header h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.blog-header p {
		font-size: 1.2rem;
		opacity: 0.9;
		margin-bottom: 2rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.blog-stats {
		display: flex;
		justify-content: center;
		gap: 3rem;
		flex-wrap: wrap;
	}

	.blog-stat {
		text-align: center;
	}

	.blog-stat strong {
		display: block;
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 0.25rem;
	}

	.blog-stat span {
		font-size: 0.9rem;
		opacity: 0.9;
	}

	.blog-content {
		padding: 4rem 0;
	}

	.blog-grid {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 3rem;
	}

	.blog-main {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.featured-post h2,
	.blog-posts h2 {
		font-size: 2rem;
		color: var(--neutral-800);
		margin-bottom: 2rem;
	}

	.featured-article {
		background: white;
		border-radius: 12px;
		box-shadow: var(--shadow-md);
		overflow: hidden;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 0;
	}

	.featured-image {
		height: 300px;
		overflow: hidden;
	}

	.featured-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.featured-content {
		padding: 2rem;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.post-meta {
		display: flex;
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.category {
		background: var(--primary-beige);
		color: var(--neutral-700);
		padding: 0.25rem 0.75rem;
		border-radius: 16px;
		font-size: 0.875rem;
		font-weight: 500;
	}

	.date {
		color: var(--neutral-500);
		font-size: 0.875rem;
	}

	.featured-content h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}

	.featured-content h3 a {
		color: var(--neutral-800);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.featured-content h3 a:hover {
		color: var(--primary-orange);
	}

	.featured-content p {
		color: var(--neutral-600);
		line-height: 1.6;
		margin-bottom: 1.5rem;
	}

	.post-footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		font-size: 0.875rem;
		color: var(--neutral-500);
	}

	.author {
		font-weight: 500;
	}

	.posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.blog-post {
		background: white;
		border-radius: 12px;
		box-shadow: var(--shadow-sm);
		overflow: hidden;
		transition: all 0.3s ease;
	}

	.blog-post:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-md);
	}

	.post-image {
		height: 200px;
		overflow: hidden;
	}

	.post-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.blog-post:hover .post-image img {
		transform: scale(1.05);
	}

	.post-content {
		padding: 1.5rem;
	}

	.post-content h3 {
		font-size: 1.25rem;
		margin-bottom: 1rem;
		line-height: 1.4;
	}

	.post-content h3 a {
		color: var(--neutral-800);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.post-content h3 a:hover {
		color: var(--primary-orange);
	}

	.post-content p {
		color: var(--neutral-600);
		line-height: 1.6;
		margin-bottom: 1rem;
	}

	.blog-sidebar {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.sidebar-section {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: var(--shadow-sm);
	}

	.sidebar-section h3 {
		font-size: 1.25rem;
		color: var(--neutral-800);
		margin-bottom: 1rem;
	}

	.category-list,
	.quick-links {
		list-style: none;
	}

	.category-list li,
	.quick-links li {
		margin-bottom: 0.75rem;
	}

	.category-list a,
	.quick-links a {
		color: var(--neutral-600);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.category-list a:hover,
	.quick-links a:hover {
		color: var(--primary-orange);
	}

	.newsletter {
		background: var(--primary-beige);
	}

	.newsletter p {
		color: var(--neutral-600);
		margin-bottom: 1rem;
	}

	.newsletter-form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.newsletter-form input {
		padding: 0.75rem;
		border: 2px solid var(--neutral-300);
		border-radius: 8px;
		font-size: 1rem;
	}

	.newsletter-form input:focus {
		outline: none;
		border-color: var(--primary-orange);
	}

	.newsletter-form button {
		padding: 0.75rem;
		font-size: 1rem;
		white-space: nowrap;
	}

	.newsletter-disclaimer {
		font-size: 0.8rem;
		color: var(--neutral-500);
		margin-top: 0.5rem;
		text-align: center;
	}

	@media (max-width: 768px) {
		.blog-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.featured-article {
			grid-template-columns: 1fr;
		}

		.posts-grid {
			grid-template-columns: 1fr;
		}

		.blog-header h1 {
			font-size: 2rem;
		}

		.blog-stats {
			gap: 1.5rem;
		}

		.blog-stat strong {
			font-size: 1.5rem;
		}

		.newsletter-form {
			flex-direction: column;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const newsletterForm = document.getElementById('blog-newsletter');
		
		if (newsletterForm) {
			newsletterForm.addEventListener('submit', (e) => {
				e.preventDefault();
				const email = e.target.querySelector('input[type="email"]').value;
				alert('Thank you for subscribing! You\'ll receive weekly business tips and success stories.');
				e.target.reset();
			});
		}
	});
</script>
</Layout>