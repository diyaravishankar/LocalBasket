---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const structuredData = {
	"@context": "https://schema.org",
	"@type": "ContactPage",
	"name": "Contact LocalBasket - Get in Touch",
	"description": "Get in touch with LocalBasket for business listings, partnerships, or support. Contact us to join India's premier home business directory.",
	"url": "https://the-local-basket.vercel.app/contact",
	"breadcrumb": {
		"@type": "BreadcrumbList",
		"itemListElement": [
			{
				"@type": "ListItem",
				"position": 1,
				"name": "Home",
				"item": "https://the-local-basket.vercel.app"
			},
			{
				"@type": "ListItem",
				"position": 2,
				"name": "Contact",
				"item": "https://the-local-basket.vercel.app/contact"
			}
		]
	}
};

const breadcrumbs = [
	{ name: "Home", url: "/" },
	{ name: "Contact", url: "/contact" }
];
---

<Layout
	title="Contact LocalBasket - Get in Touch with India's Home Business Directory"
	description="Get in touch with LocalBasket for business listings, partnerships, customer support, or general inquiries. Contact us to join India's premier home business directory and connect with local entrepreneurs across major cities."
	keywords="contact LocalBasket, business listings contact, home business directory contact, India local business contact, submit business inquiry, partnership opportunities, customer support LocalBasket, get in touch LocalBasket"
	structuredData={structuredData}
	breadcrumbs={breadcrumbs}
	canonicalUrl="/contact"
>
	<Navigation />
	
	<main>
		<section class="contact-hero">
			<div class="container">
				<nav aria-label="Breadcrumb" class="breadcrumb">
					<ol>
						{breadcrumbs.map((crumb, index) => (
							<li>
								{index < breadcrumbs.length - 1 ? (
									<a href={crumb.url}>{crumb.name}</a>
								) : (
									<span aria-current="page">{crumb.name}</span>
								)}
								{index < breadcrumbs.length - 1 && <span class="separator">‚Ä∫</span>}
							</li>
						))}
					</ol>
				</nav>
				
				<div class="hero-content">
					<h1>Get in Touch with LocalBasket</h1>
					<p class="lead">We're here to help you connect with India's vibrant home business community. Whether you're looking to list your business, explore partnership opportunities, or need support, we'd love to hear from you.</p>
				</div>
			</div>
		</section>

		<section class="contact-options">
			<div class="container">
				<div class="contact-grid">
					<div class="contact-card">
						<div class="contact-icon">üè™</div>
						<h3>List Your Business</h3>
						<p>Ready to showcase your home business to thousands of potential customers? Join our directory of verified local entrepreneurs.</p>
						<a href="/submit-business" class="btn btn-primary">Submit Your Business</a>
					</div>
					
					<div class="contact-card">
						<div class="contact-icon">ü§ù</div>
						<h3>Partnership Opportunities</h3>
						<p>Interested in partnering with LocalBasket? Let's explore how we can work together to support home businesses across India.</p>
						<a href="mailto:partnerships@localbasket.in" class="btn btn-secondary">Partnership Inquiry</a>
					</div>
					
					<div class="contact-card">
						<div class="contact-icon">üí¨</div>
						<h3>Customer Support</h3>
						<p>Need help finding a business or have questions about our services? Our support team is ready to assist you.</p>
						<a href="mailto:support@localbasket.in" class="btn btn-secondary">Get Support</a>
					</div>
					
					<div class="contact-card">
						<div class="contact-icon">üìß</div>
						<h3>General Inquiries</h3>
						<p>Have a question, suggestion, or feedback? We value your input and would love to hear from you.</p>
						<a href="mailto:hello@localbasket.in" class="btn btn-secondary">Send Message</a>
					</div>
				</div>
			</div>
		</section>

		<section class="contact-info">
			<div class="container">
				<div class="info-grid">
					<div class="info-section">
						<h2>About LocalBasket</h2>
						<p>LocalBasket is India's premier directory for home-based businesses, connecting customers with authentic food vendors, skilled artisans, and professional service providers across major Indian cities.</p>
						
						<div class="features-list">
							<div class="feature-item">
								<span class="feature-icon">‚úÖ</span>
								<span>Verified Business Listings</span>
							</div>
							<div class="feature-item">
								<span class="feature-icon">üåç</span>
								<span>Multi-City Coverage</span>
							</div>
							<div class="feature-item">
								<span class="feature-icon">üîç</span>
								<span>Easy Business Discovery</span>
							</div>
							<div class="feature-item">
								<span class="feature-icon">üíº</span>
								<span>Business Growth Support</span>
							</div>
						</div>
					</div>
					
					<div class="info-section">
						<h2>Quick Links</h2>
						<div class="quick-links">
							<a href="/directory">Browse All Cities</a>
							<a href="/bangalore">Bangalore Businesses</a>
							<a href="/mumbai">Mumbai Businesses</a>
							<a href="/chennai">Chennai Businesses</a>
							<a href="/delhi">Delhi Businesses</a>
							<a href="/pune">Pune Businesses</a>
							<a href="/about">About Us</a>
							<a href="/blog">Blog & Updates</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="contact-cta">
			<div class="container">
				<div class="cta-content">
					<h2>Ready to Join India's Home Business Community?</h2>
					<p>Whether you're a business owner looking to expand your reach or a customer seeking authentic local services, LocalBasket is your gateway to India's thriving home business ecosystem.</p>
					
					<div class="cta-buttons">
						<a href="/submit-business" class="btn btn-primary">List Your Business</a>
						<a href="/directory" class="btn btn-secondary">Explore Businesses</a>
					</div>
					
					<div class="contact-methods">
						<div class="contact-method">
							<span class="method-icon">üìß</span>
							<div class="method-info">
								<h4>Email Us</h4>
								<p>hello@localbasket.in</p>
							</div>
						</div>
						
						<div class="contact-method">
							<span class="method-icon">üåê</span>
							<div class="method-info">
								<h4>Website</h4>
								<p>the-local-basket.vercel.app</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.contact-hero {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		padding: 2rem 0 4rem;
	}
	
	.breadcrumb {
		margin-bottom: 2rem;
	}
	
	.breadcrumb ol {
		display: flex;
		list-style: none;
		padding: 0;
		margin: 0;
		gap: 0.5rem;
		align-items: center;
	}
	
	.breadcrumb a {
		color: rgba(255, 255, 255, 0.8);
		text-decoration: none;
	}
	
	.breadcrumb a:hover {
		color: white;
	}
	
	.separator {
		color: rgba(255, 255, 255, 0.6);
		margin: 0 0.5rem;
	}
	
	.hero-content h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		line-height: 1.2;
	}
	
	.lead {
		font-size: 1.2rem;
		margin-bottom: 2rem;
		opacity: 0.9;
		line-height: 1.6;
		max-width: 800px;
	}
	
	.contact-options {
		padding: 4rem 0;
		background: #f8f9fa;
	}
	
	.contact-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}
	
	.contact-card {
		background: white;
		padding: 2rem;
		border-radius: 15px;
		box-shadow: 0 5px 15px rgba(0,0,0,0.1);
		text-align: center;
		transition: transform 0.3s ease;
	}
	
	.contact-card:hover {
		transform: translateY(-5px);
	}
	
	.contact-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}
	
	.contact-card h3 {
		color: #333;
		margin-bottom: 1rem;
	}
	
	.contact-card p {
		color: #666;
		margin-bottom: 2rem;
		line-height: 1.5;
	}
	
	.contact-info {
		padding: 4rem 0;
		background: white;
	}
	
	.info-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 4rem;
	}
	
	.info-section h2 {
		color: #333;
		margin-bottom: 1.5rem;
	}
	
	.info-section p {
		color: #666;
		line-height: 1.6;
		margin-bottom: 2rem;
	}
	
	.features-list {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	
	.feature-item {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	
	.feature-icon {
		font-size: 1.2rem;
		color: #667eea;
	}
	
	.quick-links {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}
	
	.quick-links a {
		color: #667eea;
		text-decoration: none;
		padding: 0.5rem 0;
		border-bottom: 1px solid transparent;
		transition: all 0.3s ease;
	}
	
	.quick-links a:hover {
		color: #5a67d8;
		border-bottom-color: #5a67d8;
	}
	
	.contact-cta {
		padding: 4rem 0;
		background: #f8f9fa;
	}
	
	.cta-content {
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}
	
	.cta-content h2 {
		color: #333;
		margin-bottom: 1rem;
	}
	
	.cta-content p {
		color: #666;
		line-height: 1.6;
		margin-bottom: 2rem;
	}
	
	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		margin-bottom: 3rem;
	}
	
	.contact-methods {
		display: flex;
		justify-content: center;
		gap: 3rem;
	}
	
	.contact-method {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	
	.method-icon {
		font-size: 2rem;
	}
	
	.method-info h4 {
		color: #333;
		margin-bottom: 0.25rem;
	}
	
	.method-info p {
		color: #666;
		margin: 0;
	}
	
	.btn {
		padding: 0.75rem 1.5rem;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		text-align: center;
		transition: all 0.3s ease;
		border: 2px solid transparent;
		display: inline-block;
	}
	
	.btn-primary {
		background: #667eea;
		color: white;
		border-color: #667eea;
	}
	
	.btn-primary:hover {
		background: #5a67d8;
		border-color: #5a67d8;
	}
	
	.btn-secondary {
		background: transparent;
		color: #667eea;
		border-color: #667eea;
	}
	
	.btn-secondary:hover {
		background: #667eea;
		color: white;
	}
	
	@media (max-width: 768px) {
		.hero-content h1 {
			font-size: 2rem;
		}
		
		.contact-grid {
			grid-template-columns: 1fr;
		}
		
		.info-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		.cta-buttons {
			flex-direction: column;
			align-items: center;
		}
		
		.contact-methods {
			flex-direction: column;
			gap: 1.5rem;
		}
	}
</style>