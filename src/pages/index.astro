	description="Connect with verified home-based businesses in your city. Find authentic homemade food, handcrafted items, and personalized services. Support local entrepreneurs today!"
	keywords="home businesses near me, local food vendors, handmade crafts, home services, verified local businesses, community marketplace, home entrepreneurs"
	structuredData={structuredData}
	canonicalUrl="/"
>
	<Navigation />
	
	<main>
		<!-- Hero Section -->
		<section class="hero">
			<div class="container">
				<div class="hero-content">
