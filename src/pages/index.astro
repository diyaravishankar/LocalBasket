---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const structuredData = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"name": "LocalBasket",
	"url": "https://localbasket.com",
	"description": "Discover verified home-based food, craft, and service businesses in your city. Connect with local entrepreneurs and support your community.",
	"potentialAction": {
		"@type": "SearchAction",
		"target": "https://localbasket.com/directory?q={search_term_string}",
		"query-input": "required name=search_term_string"
	},
	"sameAs": [
		"https://www.facebook.com/localbasket",
		"https://www.instagram.com/localbasket",
		"https://twitter.com/localbasket"
	]
};
---

<Layout
