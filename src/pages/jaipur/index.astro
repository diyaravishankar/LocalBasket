---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

const cityData = {
	name: 'Jaipur',
	state: 'Rajasthan',
	population: '3.9 million',
	knownFor: 'Pink City, Royal Heritage',
	businessCount: 45,
	categories: [
		{ name: 'Handmade Crafts', count: 25, slug: 'crafts' },
		{ name: 'Food & Beverages', count: 15, slug: 'food' },
		{ name: 'Home Services', count: 5, slug: 'services' }
	]
};

const structuredData = {
	"@context": "https://schema.org",
	"@type": "WebPage",
	"name": `Home Businesses in ${cityData.name} - LocalBasket`,
	"description": `Discover verified home-based businesses in ${cityData.name}. Find authentic handmade crafts, traditional food, and artisan services.`,
	"url": `https://the-local-basket.vercel.app/${cityData.name.toLowerCase()}`,
	"breadcrumb": {
		"@type": "BreadcrumbList",
		"itemListElement": [
			{
				"@type": "ListItem",
				"position": 1,
				"name": "Home",
				"item": "https://the-local-basket.vercel.app"
			},
			{
				"@type": "ListItem",
				"position": 2,
				"name": cityData.name,
				"item": `https://the-local-basket.vercel.app/${cityData.name.toLowerCase()}`
			}
		]
	}
};

const breadcrumbs = [
	{ name: "Home", url: "/" },
	{ name: cityData.name, url: `/${cityData.name.toLowerCase()}` }
];

const featuredBusinesses = [
	{
		name: "Heritage Jewelry Workshop",
		category: "Handmade Crafts",
		description: "Traditional Rajasthani jewelry crafted using age-old techniques and precious stones",
		rating: 4.9,
		reviews: 87,
		image: "https://images.pexels.com/photos/6263123/pexels-photo-6263123.jpeg?auto=compress&cs=tinysrgb&w=400",
		url: "/jaipur/crafts/heritage-jewelry-workshop"
	}
];
---

<Layout
	title={`Home Businesses in ${cityData.name} - Verified Traditional Crafts & Heritage Services | LocalBasket`}
	description={`Discover ${cityData.businessCount}+ verified home-based businesses in ${cityData.name}, the ${cityData.knownFor}. Find authentic Rajasthani crafts, traditional jewelry, and heritage food from local artisans. Support ${cityData.name}'s rich artisan community.`}
	keywords={`home businesses ${cityData.name}, Rajasthani crafts, traditional jewelry ${cityData.name}, handmade crafts ${cityData.name}, heritage food ${cityData.name}, verified businesses ${cityData.state}, ${cityData.name} artisans, local marketplace ${cityData.name}, Pink City crafts, traditional art ${cityData.name}, ${cityData.name} jewelry workshop, home based business ${cityData.name}`}
	structuredData={structuredData}
	breadcrumbs={breadcrumbs}
	canonicalUrl="/jaipur"
>
	<Navigation />
	
	<main>
		<section class="city-hero">
			<div class="container">
				<nav aria-label="Breadcrumb" class="breadcrumb">
					<ol>
						{breadcrumbs.map((crumb, index) => (
							<li>
								{index < breadcrumbs.length - 1 ? (
									<a href={crumb.url}>{crumb.name}</a>
								) : (
									<span aria-current="page">{crumb.name}</span>
								)}
								{index < breadcrumbs.length - 1 && <span class="separator">›</span>}
							</li>
						))}
					</ol>
				</nav>
				
				<div class="hero-content">
					<h1>Verified Heritage Businesses in Jaipur</h1>
					<p class="lead">Discover ${cityData.businessCount}+ verified home-based businesses in ${cityData.name}, the ${cityData.knownFor}. Connect with master artisans creating authentic Rajasthani crafts, traditional jewelry, and heritage food that celebrates the royal legacy of the Pink City.</p>
					
					<div class="city-stats">
						<div class="stat-item">
							<h3>{cityData.businessCount}+</h3>
							<p>Verified Artisans</p>
						</div>
						<div class="stat-item">
							<h3>{cityData.categories.length}</h3>
							<p>Categories</p>
						</div>
						<div class="stat-item">
							<h3>4.9⭐</h3>
							<p>Average Rating</p>
						</div>
						<div class="stat-item">
							<h3>600+</h3>
							<p>Happy Customers</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="city-categories">
			<div class="container">
				<h2>Authentic Rajasthani Crafts & Jewelry</h2>
				<div class="crafts-category-card">
					<p>Experience the royal heritage of Jaipur through exquisite handcrafted jewelry, textiles, and decorative items created by master artisans. Each piece reflects centuries of traditional craftsmanship and artistic excellence.</p>
					<div class="featured-craft">
						<h3>Heritage Jewelry Workshop</h3>
						<p>Traditional Rajasthani jewelry crafted using time-honored techniques, precious stones, and intricate designs that have adorned royalty for generations.</p>
						<a href="/jaipur/crafts/heritage-jewelry-workshop" class="btn btn-primary">Explore Collection</a>
					</div>
				</div>
				
				<h2>Traditional Rajasthani Cuisine</h2>
				<div class="food-category-card">
					<p>Savor authentic Rajasthani flavors prepared by skilled home chefs who preserve traditional recipes and cooking methods passed down through royal kitchens and family traditions.</p>
					<div class="cuisine-highlights">
						<div class="cuisine-item">
							<h3>Royal Thali Specialists</h3>
							<p>Experience elaborate Rajasthani thalis with traditional dishes like dal bati churma, gatte ki sabzi, and authentic sweets.</p>
						</div>
						<div class="cuisine-item">
							<h3>Traditional Sweets & Snacks</h3>
							<p>Handmade traditional sweets like ghevar, rasgulla, and savory snacks prepared using heritage recipes.</p>
						</div>
					</div>
				</div>
				
				<h2>Heritage Services & Experiences</h2>
				<div class="services-overview">
					<div class="service-area">
						<h3>Cultural Workshops</h3>
						<p>Learn traditional Rajasthani arts and crafts from master artisans in intimate workshop settings.</p>
					</div>
					<div class="service-area">
						<h3>Heritage Consultations</h3>
						<p>Expert guidance on traditional Rajasthani art, architecture, and cultural practices for enthusiasts and collectors.</p>
					</div>
				</div>
			</div>
		</section>

		<section class="featured-businesses">
			<div class="container">
				<h2>Featured Heritage Businesses in Jaipur</h2>
				<div class="businesses-grid">
					{featuredBusinesses.map((business) => (
						<div class="business-card">
							<img src={business.image} alt={business.name} loading="lazy" />
							<div class="business-info">
								<h3>{business.name}</h3>
								<p class="category">{business.category}</p>
								<p class="description">{business.description}</p>
								<div class="rating">
									<span class="stars">{"⭐".repeat(Math.floor(business.rating))}</span>
									<span class="rating-score">{business.rating}</span>
									<span class="reviews">({business.reviews} reviews)</span>
								</div>
								<a href={business.url} class="btn btn-outline">View Collection</a>
							</div>
						</div>
					))}
				</div>
				
				<div class="city-cta">
					<h3>Discover the Royal Heritage of Jaipur</h3>
					<p>Connect with master artisans and experience the authentic craftsmanship of the Pink City.</p>
					<div class="cta-buttons">
						<a href="/submit-business" class="btn btn-primary">List Your Craft</a>
						<a href="/directory" class="btn btn-secondary">Browse All Cities</a>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.city-hero {
		background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
		color: white;
		padding: 2rem 0 4rem;
	}
	
	.breadcrumb {
		margin-bottom: 2rem;
	}
	
	.breadcrumb ol {
		display: flex;
		list-style: none;
		padding: 0;
		margin: 0;
		gap: 0.5rem;
		align-items: center;
	}
	
	.breadcrumb a {
		color: rgba(255, 255, 255, 0.8);
		text-decoration: none;
	}
	
	.breadcrumb a:hover {
		color: white;
	}
	
	.separator {
		color: rgba(255, 255, 255, 0.6);
		margin: 0 0.5rem;
	}
	
	.hero-content h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		line-height: 1.2;
	}
	
	.lead {
		font-size: 1.2rem;
		margin-bottom: 2rem;
		opacity: 0.9;
		line-height: 1.6;
	}
	
	.city-stats {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}
	
	.stat-item {
		text-align: center;
		background: rgba(255, 255, 255, 0.1);
		padding: 1.5rem;
		border-radius: 10px;
		backdrop-filter: blur(10px);
	}
	
	.stat-item h3 {
		font-size: 2rem;
		margin-bottom: 0.5rem;
		color: #fff;
	}
	
	.city-categories {
		padding: 4rem 0;
		background: #f8f9fa;
	}
	
	.crafts-category-card, .food-category-card {
		background: white;
		border-radius: 15px;
		padding: 2rem;
		margin: 2rem 0;
		box-shadow: 0 5px 15px rgba(0,0,0,0.1);
	}
	
	.featured-craft {
		margin-top: 1.5rem;
		padding: 1.5rem;
		background: #f8f9fa;
		border-radius: 10px;
		border-left: 4px solid #f5576c;
	}
	
	.cuisine-highlights {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
		margin-top: 1.5rem;
	}
	
	.cuisine-item {
		padding: 1.5rem;
		background: #f8f9fa;
		border-radius: 10px;
		border-left: 4px solid #f5576c;
	}
	
	.services-overview {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}
	
	.service-area {
		background: white;
		padding: 2rem;
		border-radius: 10px;
		box-shadow: 0 3px 10px rgba(0,0,0,0.1);
	}
	
	.featured-businesses {
		padding: 4rem 0;
	}
	
	.businesses-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}
	
	.business-card {
		background: white;
		border-radius: 15px;
		overflow: hidden;
		box-shadow: 0 5px 15px rgba(0,0,0,0.1);
		transition: transform 0.3s ease;
	}
	
	.business-card:hover {
		transform: translateY(-5px);
	}
	
	.business-card img {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}
	
	.business-info {
		padding: 1.5rem;
	}
	
	.business-info h3 {
		margin-bottom: 0.5rem;
		color: #333;
	}
	
	.category {
		color: #f5576c;
		font-weight: 600;
		margin-bottom: 1rem;
	}
	
	.description {
		color: #666;
		margin-bottom: 1rem;
		line-height: 1.5;
	}
	
	.rating {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}
	
	.rating-score {
		font-weight: 600;
		color: #333;
	}
	
	.reviews {
		color: #666;
		font-size: 0.9rem;
	}
	
	.city-cta {
		text-align: center;
		background: white;
		padding: 3rem;
		border-radius: 15px;
		box-shadow: 0 5px 15px rgba(0,0,0,0.1);
	}
	
	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		margin-top: 2rem;
	}
	
	.btn {
		padding: 0.75rem 1.5rem;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		text-align: center;
		transition: all 0.3s ease;
		border: 2px solid transparent;
	}
	
	.btn-primary {
		background: #f5576c;
		color: white;
		border-color: #f5576c;
	}
	
	.btn-primary:hover {
		background: #e74c60;
		border-color: #e74c60;
	}
	
	.btn-secondary {
		background: transparent;
		color: #f5576c;
		border-color: #f5576c;
	}
	
	.btn-secondary:hover {
		background: #f5576c;
		color: white;
	}
	
	.btn-outline {
		background: transparent;
		color: #f5576c;
		border-color: #f5576c;
	}
	
	.btn-outline:hover {
		background: #f5576c;
		color: white;
	}
	
	@media (max-width: 768px) {
		.hero-content h1 {
			font-size: 2rem;
		}
		
		.city-stats {
			grid-template-columns: repeat(2, 1fr);
		}
		
		.businesses-grid {
			grid-template-columns: 1fr;
		}
		
		.cuisine-highlights {
			grid-template-columns: 1fr;
		}
		
		.cta-buttons {
			flex-direction: column;
			align-items: center;
		}
	}
</style>