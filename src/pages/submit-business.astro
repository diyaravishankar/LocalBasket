---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout
	title="List Your Home Business Free | Join LocalBasket Directory of 500+ Verified Businesses"
	description="List your home business on LocalBasket for FREE. Reach 10,000+ local customers looking for authentic food, crafts, and services. Join 500+ verified home entrepreneurs today!"
	keywords="list home business free, home business directory listing, local business registration, home entrepreneur platform, food business listing, craft business directory"
	canonicalUrl="/submit-business"
>
	<Navigation />
	
	<main>
		<section class="submit-header">
			<div class="container">
				<h1>List Your Home Business for FREE</h1>
				<p>Join 500+ verified home entrepreneurs reaching 10,000+ local customers through LocalBasket</p>
				<div class="success-stats">
					<div class="success-stat">
						<strong>3x</strong>
						<span>Average Order Increase</span>
					</div>
					<div class="success-stat">
						<strong>24-48hrs</strong>
						<span>Quick Verification</span>
					</div>
					<div class="success-stat">
						<strong>100%</strong>
						<span>Free Listing</span>
					</div>
				</div>
			</div>
		</section>

		<section class="submit-content">
			<div class="container">
				<div class="submit-grid">
					<div class="submit-info">
						<h2>🚀 Why 500+ Entrepreneurs Choose LocalBasket</h2>
						<div class="benefits">
							<div class="benefit">
								<div class="benefit-icon">🌟</div>
								<div class="benefit-content">
									<h3>Reach 10,000+ Local Customers</h3>
									<p>Connect with customers in your neighborhood who are actively searching for authentic, homemade products and personalized services.</p>
								</div>
							</div>
							
							<div class="benefit">
								<div class="benefit-icon">📈</div>
								<div class="benefit-content">
									<h3>Triple Your Orders</h3>
									<p>Our verified businesses see an average 3x increase in orders within the first month of listing on LocalBasket.</p>
								</div>
							</div>
							
							<div class="benefit">
								<div class="benefit-icon">🤝</div>
								<div class="benefit-content">
									<h3>Join Verified Community</h3>
									<p>Become part of India's largest network of verified home entrepreneurs and build lasting relationships with loyal customers.</p>
								</div>
							</div>
							
							<div class="benefit">
								<div class="benefit-icon">💰</div>
								<div class="benefit-content">
									<h3>100% Free Forever</h3>
									<p>No setup fees, no monthly charges, no hidden costs. List your business completely free and start earning more today.</p>
								</div>
							</div>
						</div>
					</div>
					
					<div class="submit-form-container">
						<div class="form-header">
							<h2>📝 Get Listed in 24-48 Hours</h2>
							<p>Submit your business details and join 500+ verified home entrepreneurs</p>
						</div>
						
						<div class="contact-form">
							<h3>🚀 Quick Business Submission</h3>
							<p>Contact our team to get your business verified and listed within 24-48 hours:</p>
							
							<div class="contact-methods">
								<div class="contact-method">
									<div class="contact-icon">📧</div>
									<div class="contact-details">
										<h4>Email Submission</h4>
										<p><strong><a href="mailto:submit@localbasket.com">submit@localbasket.com</a></strong></p>
										<p>Send us your business details for quick processing</p>
									</div>
								</div>
								
								<div class="contact-method">
									<div class="contact-icon">📱</div>
									<div class="contact-details">
										<h4>WhatsApp Support</h4>
										<p><strong><a href="https://wa.me/919876543210">+91 98765 43210</a></strong></p>
										<p>Get instant support and quick verification</p>
									</div>
								</div>
							</div>
						</div>
						
						<div class="required-info-section">
							<h3>📋 Required Information Checklist</h3>
							<div class="info-checklist">
								<div class="checklist-item">
									<span class="checkmark">✓</span>
									<span>Business name and detailed description (50+ words)</span>
								</div>
								<div class="checklist-item">
									<span class="checkmark">✓</span>
									<span>Your city and specific area/locality</span>
								</div>
								<div class="checklist-item">
									<span class="checkmark">✓</span>
									<span>Business category (Food, Crafts, or Services)</span>
								</div>
								<div class="checklist-item">
									<span class="checkmark">✓</span>
									<span>Contact information (phone and email)</span>
								</div>
								<div class="checklist-item">
									<span class="checkmark">✓</span>
									<span>High-quality business photos (2-3 images)</span>
								</div>
								<div class="checklist-item">
									<span class="checkmark">✓</span>
									<span>Operating hours and available days</span>
								</div>
								<div class="checklist-item">
									<span class="checkmark">✓</span>
									<span>Pricing information and specialties</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="submission-process">
			<div class="container">
				<h2>🎯 Simple 4-Step Process</h2>
				<div class="process-steps">
					<div class="step">
						<div class="step-number">1</div>
						<h3>📝 Submit Details</h3>
						<p>Send us your business information, photos, and contact details via email or WhatsApp.</p>
					</div>
					
					<div class="step">
						<div class="step-number">2</div>
						<h3>🔍 Quick Verification</h3>
						<p>Our expert team reviews and verifies your business details within 24-48 hours for quality assurance.</p>
					</div>
					
					<div class="step">
						<div class="step-number">3</div>
						<h3>🚀 Go Live</h3>
						<p>Once verified, your business goes live on LocalBasket and becomes visible to 10,000+ local customers.</p>
					</div>
					
					<div class="step">
						<div class="step-number">4</div>
						<h3>💰 Start Earning</h3>
						<p>Begin receiving inquiries, orders, and grow your business with our supportive community.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Success Stories Section -->
		<section class="success-stories">
			<div class="container">
				<h2>💬 Success Stories from Our Community</h2>
				<div class="stories-grid">
					<div class="story-card">
						<div class="story-content">
							<p>"LocalBasket transformed my home bakery! I went from 5 orders per week to 50+ orders. The verification badge really builds customer trust."</p>
						</div>
						<div class="story-author">
							<strong>Meera Patel</strong>
							<span>Home Baker, Mumbai • 3x Order Increase</span>
						</div>
					</div>
					
					<div class="story-card">
						<div class="story-content">
							<p>"Within one month of listing, my handmade jewelry business doubled its revenue. LocalBasket customers really appreciate authentic craftsmanship."</p>
						</div>
						<div class="story-author">
							<strong>Arjun Crafts</strong>
							<span>Jewelry Maker, Bangalore • 2x Revenue Growth</span>
						</div>
					</div>
					
					<div class="story-card">
						<div class="story-content">
							<p>"The platform helped me reach customers beyond my neighborhood. Now I have regular clients from across the city for my tutoring services."</p>
						</div>
						<div class="story-author">
							<strong>Dr. Priya Sharma</strong>
							<span>Home Tutor, Delhi • Expanded Customer Base</span>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
	
	<Footer />
</Layout>

<style>
	.submit-header {
		background: var(--primary-green);
		padding: 3rem 0;
		text-align: center;
		color: white;
	}

	.submit-header h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.submit-header p {
		font-size: 1.2rem;
		opacity: 0.9;
		margin-bottom: 2rem;
	}

	.success-stats {
		display: flex;
		justify-content: center;
		gap: 3rem;
		flex-wrap: wrap;
	}

	.success-stat {
		text-align: center;
	}

	.success-stat strong {
		display: block;
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 0.25rem;
	}

	.success-stat span {
		font-size: 0.9rem;
		opacity: 0.9;
	}

	.submit-content {
		padding: 4rem 0;
	}

	.submit-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: start;
	}

	.submit-info h2 {
		font-size: 2rem;
		color: var(--neutral-800);
		margin-bottom: 2rem;
	}

	.benefits {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.benefit {
		display: flex;
		gap: 1rem;
		align-items: start;
	}

	.benefit-icon {
		font-size: 2rem;
		flex-shrink: 0;
	}

	.benefit-content h3 {
		color: var(--neutral-800);
		margin-bottom: 0.5rem;
	}

	.benefit-content p {
		color: var(--neutral-600);
		line-height: 1.6;
	}

	.submit-form-container {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: var(--shadow-md);
	}

	.form-header {
		margin-bottom: 2rem;
		text-align: center;
	}

	.form-header h2 {
		font-size: 1.8rem;
		color: var(--neutral-800);
		margin-bottom: 0.5rem;
	}

	.form-header p {
		color: var(--neutral-600);
	}

	.contact-form {
		padding: 2rem;
		background: var(--neutral-100);
		border-radius: 8px;
		margin-bottom: 2rem;
	}

	.contact-form h3 {
		color: var(--neutral-800);
		margin-bottom: 1rem;
		font-size: 1.5rem;
		text-align: center;
	}

	.contact-form p {
		text-align: center;
		color: var(--neutral-600);
		margin-bottom: 2rem;
	}

	.contact-methods {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.contact-method {
		background: white;
		padding: 1.5rem;
		border-radius: 8px;
		box-shadow: var(--shadow-sm);
		display: flex;
		gap: 1rem;
		align-items: start;
	}

	.contact-icon {
		font-size: 2rem;
		flex-shrink: 0;
	}

	.contact-details h4 {
		color: var(--neutral-800);
		margin-bottom: 0.5rem;
	}

	.contact-details a {
		color: var(--primary-orange);
		text-decoration: none;
		font-weight: 600;
	}

	.contact-details a:hover {
		text-decoration: underline;
	}

	.contact-details p {
		margin-bottom: 0.5rem;
		color: var(--neutral-600);
	}

	.required-info-section {
		padding: 2rem;
		background: white;
		border-radius: 8px;
		box-shadow: var(--shadow-sm);
	}

	.required-info-section h3 {
		color: var(--neutral-800);
		margin-bottom: 1rem;
		text-align: center;
		font-size: 1.25rem;
	}

	.info-checklist {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.checklist-item {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 0.75rem;
		background: var(--neutral-100);
		border-radius: 8px;
	}

	.checkmark {
		background: var(--primary-green);
		color: white;
		width: 24px;
		height: 24px;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 0.875rem;
		font-weight: 600;
		flex-shrink: 0;
	}

	.checklist-item span:last-child {
		color: var(--neutral-700);
		line-height: 1.4;
	}

	.submission-process {
		padding: 4rem 0;
		background: var(--neutral-100);
	}

	.submission-process h2 {
		font-size: 2rem;
		color: var(--neutral-800);
		text-align: center;
		margin-bottom: 3rem;
	}

	.process-steps {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.step {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: var(--shadow-sm);
		text-align: center;
		position: relative;
	}

	.step-number {
		width: 60px;
		height: 60px;
		background: var(--primary-orange);
		color: white;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.5rem;
		font-weight: 700;
		margin: 0 auto 1rem;
	}

	.step h3 {
		color: var(--neutral-800);
		margin-bottom: 1rem;
	}

	.step p {
		color: var(--neutral-600);
		line-height: 1.6;
	}

	.success-stories {
		padding: 4rem 0;
		background: var(--neutral-100);
	}

	.success-stories h2 {
		font-size: 2rem;
		color: var(--neutral-800);
		text-align: center;
		margin-bottom: 3rem;
	}

	.stories-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.story-card {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: var(--shadow-sm);
		border-left: 4px solid var(--primary-green);
	}

	.story-content p {
		font-style: italic;
		color: var(--neutral-600);
		line-height: 1.6;
		margin-bottom: 1.5rem;
		font-size: 1.1rem;
	}

	.story-author strong {
		color: var(--neutral-800);
		display: block;
		margin-bottom: 0.25rem;
	}

	.story-author span {
		color: var(--neutral-500);
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.submit-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.submit-header h1 {
			font-size: 2rem;
		}

		.success-stats {
			gap: 1.5rem;
		}

		.success-stat strong {
			font-size: 1.5rem;
		}

		.contact-methods {
			grid-template-columns: 1fr;
		}

		.process-steps {
			grid-template-columns: 1fr;
		}

		.stories-grid {
			grid-template-columns: 1fr;
		}
	}
</style>