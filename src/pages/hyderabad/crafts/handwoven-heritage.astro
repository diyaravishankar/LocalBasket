---
import Layout from '../../../layouts/Layout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';

const business = {
	name: 'Handwoven Heritage',
	city: 'Hyderabad',
	category: 'Crafts & Handmade',
	description: 'Traditional handwoven fabrics, authentic sarees, and home textiles preserving ancient weaving techniques and cultural heritage. Each piece is crafted with love and represents generations of artisan expertise.',
	rating: 4.8,
	reviews: 94,
	image: 'https://images.pexels.com/photos/6069978/pexels-photo-6069978.jpeg?auto=compress&cs=tinysrgb&w=800',
	phone: '+919876543214',
	email: 'handwoven.heritage@gmail.com',
	address: 'Banjara Hills, Hyderabad, Telangana 500034',
	specialties: ['Pochampally Sarees', 'Table Runners', 'Handloom Cotton', 'Traditional Dupattas', 'Wall Hangings'],
	verified: true,
	established: '2017',
	operatingHours: 'Mon-Sat: 10:00 AM - 7:00 PM',
	priceRange: '‚Çπ500 - ‚Çπ8000',
	gallery: [
		'https://images.pexels.com/photos/6069978/pexels-photo-6069978.jpeg?auto=compress&cs=tinysrgb&w=600',
		'https://images.pexels.com/photos/5709661/pexels-photo-5709661.jpeg?auto=compress&cs=tinysrgb&w=600',
		'https://images.pexels.com/photos/4210782/pexels-photo-4210782.jpeg?auto=compress&cs=tinysrgb&w=600'
	]
};

const structuredData = {
	"@context": "https://schema.org",
	"@type": "LocalBusiness",
	"name": business.name,
	"description": business.description,
	"url": "https://the-local-basket.vercel.app/hyderabad/crafts/handwoven-heritage",
	"telephone": business.phone,
	"email": business.email,
	"address": {
		"@type": "PostalAddress",
		"streetAddress": business.address,
		"addressLocality": "Hyderabad",
		"addressRegion": "Telangana",
		"addressCountry": "IN"
	},
	"aggregateRating": {
		"@type": "AggregateRating",
		"ratingValue": business.rating,
		"reviewCount": business.reviews,
		"bestRating": 5,
		"worstRating": 1
	},
	"image": business.image,
	"priceRange": business.priceRange,
	"openingHours": "Mo-Sa 10:00-19:00",
	"foundingDate": business.established,
	"paymentAccepted": "Cash, UPI, Bank Transfer"
};
---

<Layout
	title="Handwoven Heritage - Traditional Handwoven Fabrics & Sarees | Hyderabad"
	description="Discover authentic handwoven Pochampally sarees, traditional fabrics, and home textiles in Hyderabad. Preserving ancient weaving heritage. ‚≠ê4.8/5 rating. Call +91 98765 43214"
	keywords="Handwoven Heritage Hyderabad, Pochampally sarees, handloom cotton, traditional textiles, handwoven fabrics, table runners, dupattas"
	structuredData={structuredData}
>
	<Navigation />
	
	<main>
		<section class="business-hero">
			<div class="container">
				<div class="hero-content">
					<div class="business-header">
						<div class="business-info">
							{business.verified && <div class="verified-badge">‚úì Verified Business</div>}
							<h1>{business.name}</h1>
							<p class="business-category">{business.category} ‚Ä¢ {business.city}</p>
							<div class="business-rating">
								<span class="stars">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</span>
								<span class="rating-text">{business.rating}/5 ({business.reviews} reviews)</span>
							</div>
						</div>
						<div class="business-image">
							<img src={business.image} alt={`${business.name} - ${business.description}`} />
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="business-details">
			<div class="container">
				<div class="details-grid">
					<div class="main-content">
						<div class="about-section">
							<h2>About {business.name}</h2>
							<p>{business.description}</p>
							
							<div class="specialties-section">
								<h3>Our Heritage Collection</h3>
								<div class="specialties-grid">
									{business.specialties.map(specialty => (
										<span class="specialty-tag">{specialty}</span>
									))}
								</div>
							</div>
						</div>

						<div class="gallery-section">
							<h3>Our Handwoven Creations</h3>
							<div class="gallery-grid">
								{business.gallery.map((image, index) => (
									<img src={image} alt={`${business.name} handwoven textile ${index + 1}`} loading="lazy" />
								))}
							</div>
						</div>
					</div>

					<div class="sidebar">
						<div class="contact-card">
							<h3>Contact Information</h3>
							<div class="contact-info">
								<div class="contact-item">
									<span class="contact-icon">üìû</span>
									<div>
										<strong>Phone</strong>
										<p><a href={`tel:${business.phone}`}>{business.phone}</a></p>
									</div>
								</div>
								
								<div class="contact-item">
									<span class="contact-icon">üìß</span>
									<div>
										<strong>Email</strong>
										<p><a href={`mailto:${business.email}`}>{business.email}</a></p>
									</div>
								</div>
								
								<div class="contact-item">
									<span class="contact-icon">üìç</span>
									<div>
										<strong>Address</strong>
										<p>{business.address}</p>
									</div>
								</div>
								
								<div class="contact-item">
									<span class="contact-icon">üïí</span>
									<div>
										<strong>Hours</strong>
										<p>{business.operatingHours}</p>
									</div>
								</div>
								
								<div class="contact-item">
									<span class="contact-icon">üí∞</span>
									<div>
										<strong>Price Range</strong>
										<p>{business.priceRange}</p>
									</div>
								</div>
							</div>
							
							<div class="contact-actions">
								<a href={`tel:${business.phone}`} class="btn btn-primary">üìû Call Now</a>
								<a href={`https://wa.me/${business.phone.replace(/[^0-9]/g, '')}`} class="btn btn-secondary" target="_blank" rel="noopener">üí¨ WhatsApp</a>
								<a href={`mailto:${business.email}`} class="btn btn-outline">üìß Email</a>
							</div>
						</div>

						<div class="business-stats">
							<h3>Heritage Stats</h3>
							<div class="stats-grid">
								<div class="stat">
									<strong>Est. {business.established}</strong>
									<span>Years of Tradition</span>
								</div>
								<div class="stat">
									<strong>{business.reviews}+</strong>
									<span>Satisfied Customers</span>
								</div>
								<div class="stat">
									<strong>{business.rating}/5</strong>
									<span>Average Rating</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="related-businesses">
			<div class="container">
				<h2>Other Craft Businesses in Hyderabad</h2>
				<div class="related-grid">
					<div class="related-card">
						<img src="https://images.pexels.com/photos/1454360/pexels-photo-1454360.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Artisan Crafts by Maya" />
						<h4>Artisan Crafts by Maya</h4>
						<p>Exquisite handmade jewelry and decorative items</p>
						<a href="/chennai/crafts/artisan-crafts-maya" class="btn btn-outline">View Details</a>
					</div>
				</div>
			</div>
		</section>
	</main>
	
	<Footer />
</Layout>

<style>
	.business-hero {
		background: var(--primary-beige);
		padding: 2rem 0;
	}

	.business-header {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 2rem;
		align-items: center;
	}

	.verified-badge {
		background: var(--primary-green);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.875rem;
		font-weight: 600;
		display: inline-block;
		margin-bottom: 1rem;
	}

	.business-info h1 {
		font-size: 2.5rem;
		color: var(--neutral-800);
		margin-bottom: 0.5rem;
	}

	.business-category {
		color: var(--neutral-600);
		font-size: 1.2rem;
		margin-bottom: 1rem;
	}

	.business-rating {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.stars {
		color: #ffd700;
		font-size: 1.2rem;
	}

	.rating-text {
		color: var(--neutral-600);
		font-weight: 500;
	}

	.business-image {
		border-radius: 12px;
		overflow: hidden;
		box-shadow: var(--shadow-lg);
	}

	.business-image img {
		width: 100%;
		height: 300px;
		object-fit: cover;
	}

	.business-details {
		padding: 3rem 0;
	}

	.details-grid {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 3rem;
	}

	.about-section h2 {
		font-size: 2rem;
		color: var(--neutral-800);
		margin-bottom: 1rem;
	}

	.about-section p {
		color: var(--neutral-600);
		line-height: 1.8;
		margin-bottom: 2rem;
		font-size: 1.1rem;
	}

	.specialties-section h3 {
		font-size: 1.5rem;
		color: var(--neutral-800);
		margin-bottom: 1rem;
	}

	.specialties-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		margin-bottom: 2rem;
	}

	.specialty-tag {
		background: var(--primary-orange);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.9rem;
		font-weight: 500;
	}

	.gallery-section h3 {
		font-size: 1.5rem;
		color: var(--neutral-800);
		margin-bottom: 1rem;
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1rem;
	}

	.gallery-grid img {
		width: 100%;
		height: 200px;
		object-fit: cover;
		border-radius: 8px;
		box-shadow: var(--shadow-sm);
		transition: transform 0.3s ease;
	}

	.gallery-grid img:hover {
		transform: scale(1.05);
	}

	.sidebar {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.contact-card,
	.business-stats {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: var(--shadow-md);
	}

	.contact-card h3,
	.business-stats h3 {
		font-size: 1.5rem;
		color: var(--neutral-800);
		margin-bottom: 1.5rem;
	}

	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		margin-bottom: 2rem;
	}

	.contact-item {
		display: flex;
		gap: 1rem;
		align-items: start;
	}

	.contact-icon {
		font-size: 1.5rem;
		flex-shrink: 0;
	}

	.contact-item strong {
		display: block;
		color: var(--neutral-800);
		margin-bottom: 0.25rem;
	}

	.contact-item p {
		color: var(--neutral-600);
		margin: 0;
	}

	.contact-item a {
		color: var(--primary-orange);
		text-decoration: none;
		font-weight: 500;
	}

	.contact-item a:hover {
		text-decoration: underline;
	}

	.contact-actions {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.contact-actions .btn {
		text-align: center;
		padding: 0.75rem;
		font-weight: 600;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1rem;
	}

	.stat {
		text-align: center;
		padding: 1rem;
		background: var(--neutral-100);
		border-radius: 8px;
	}

	.stat strong {
		display: block;
		font-size: 1.5rem;
		color: var(--primary-orange);
		margin-bottom: 0.25rem;
	}

	.stat span {
		color: var(--neutral-600);
		font-size: 0.9rem;
	}

	.related-businesses {
		padding: 3rem 0;
		background: var(--neutral-100);
	}

	.related-businesses h2 {
		font-size: 2rem;
		color: var(--neutral-800);
		text-align: center;
		margin-bottom: 2rem;
	}

	.related-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.related-card {
		background: white;
		border-radius: 12px;
		box-shadow: var(--shadow-sm);
		overflow: hidden;
		text-align: center;
		padding: 1.5rem;
	}

	.related-card img {
		width: 100%;
		height: 150px;
		object-fit: cover;
		border-radius: 8px;
		margin-bottom: 1rem;
	}

	.related-card h4 {
		color: var(--neutral-800);
		margin-bottom: 0.5rem;
	}

	.related-card p {
		color: var(--neutral-600);
		margin-bottom: 1rem;
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.business-header {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.business-info h1 {
			font-size: 2rem;
		}

		.details-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.contact-actions {
			flex-direction: column;
		}

		.gallery-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
</Layout>