	}

	.conclusion p {
		font-size: 1.1rem;
		color: var(--neutral-600);
		line-height: 1.8;
		max-width: 800px;
		margin: 0 auto 3rem;
	}

	.score-summary {
		background: var(--primary-beige);
		padding: 2rem;
		border-radius: 12px;
		max-width: 600px;
		margin: 0 auto;
	}

