---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

const cityData = {
	name: 'Chennai',
	state: 'Tamil Nadu',
	population: '11.3 million',
	knownFor: 'Cultural Capital of South India, Detroit of India',
	businessCount: 95,
	categories: [
		{ name: 'Food & Beverages', count: 30, slug: 'food' },
		{ name: 'Handmade Crafts', count: 45, slug: 'crafts' },
		{ name: 'Home Services', count: 20, slug: 'services' }
	]
};

const structuredData = {
	"@context": "https://schema.org",
	"@type": "WebPage",
	"name": `Home Businesses in ${cityData.name} - LocalBasket`,
	"description": `Discover verified home-based businesses in ${cityData.name}. Find authentic homemade food, handcrafted items, and professional services.`,
	"url": `https://the-local-basket.vercel.app/${cityData.name.toLowerCase()}`,
	"mainEntity": {
		"@type": "ItemList",
		"name": `Home Businesses in ${cityData.name}`,
		"numberOfItems": cityData.businessCount,
		"itemListElement": cityData.categories.map((cat, index) => ({
			"@type": "ListItem",
			"position": index + 1,
			"name": cat.name,
			"url": `https://the-local-basket.vercel.app/${cityData.name.toLowerCase()}/${cat.slug}`
		}))
	}
};

const breadcrumbs = [
	{ name: "Home", url: "/" },
	{ name: cityData.name, url: `/${cityData.name.toLowerCase()}` }
];
---

<Layout
	title={`Home Businesses in ${cityData.name} - Verified Local Food, Crafts & Services | LocalBasket`}
	description={`Discover ${cityData.businessCount}+ verified home-based businesses in ${cityData.name}, ${cityData.state}. Find authentic homemade food, handcrafted items, and professional services from local entrepreneurs. Support ${cityData.name}'s home business community.`}
	keywords={`home businesses ${cityData.name}, local food vendors ${cityData.name}, handmade crafts ${cityData.name}, home services ${cityData.name}, verified businesses ${cityData.state}, ${cityData.name} entrepreneurs, local marketplace ${cityData.name}, authentic Tamil food ${cityData.name}, traditional crafts ${cityData.name}, handmade jewelry ${cityData.name}, local artisan crafts ${cityData.name}, home based food business ${cityData.name}, neighborhood vendors ${cityData.name}, handloom products ${cityData.name}`}
	structuredData={structuredData}
	breadcrumbs={breadcrumbs}
	canonicalUrl="/chennai"
>
	<Navigation />
	
	<main>
		<section class="city-hero">
			<div class="container">
				<nav aria-label="Breadcrumb" class="breadcrumb">
					<ol>
						{breadcrumbs.map((crumb, index) => (
							<li>
								{index < breadcrumbs.length - 1 ? (
									<a href={crumb.url}>{crumb.name}</a>
								) : (
									<span aria-current="page">{crumb.name}</span>
								)}
								{index < breadcrumbs.length - 1 && <span class="separator">‚Ä∫</span>}
							</li>
						))}
					</ol>
				</nav>
				
				<div class="hero-content">
					<h1>Home Businesses in {cityData.name}</h1>
					<p class="lead">Discover {cityData.businessCount}+ verified home-based businesses in {cityData.name}, the {cityData.knownFor}. Connect with local entrepreneurs offering authentic homemade food, unique handcrafted items, and personalized services.</p>
					
					<div class="city-stats">
						<div class="stat-item">
							<h3>{cityData.businessCount}+</h3>
							<p>Verified Businesses</p>
						</div>
						<div class="stat-item">
							<h3>{cityData.categories.length}</h3>
							<p>Categories</p>
						</div>
						<div class="stat-item">
							<h3>4.7‚≠ê</h3>
							<p>Average Rating</p>
						</div>
						<div class="stat-item">
							<h3>800+</h3>
							<p>Happy Customers</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="city-categories">
			<div class="container">
				<h2>Business Categories in {cityData.name}</h2>
				<div class="categories-grid">
					{cityData.categories.map((category) => (
						<div class="category-card">
							<div class="category-header">
								<h3>{category.name}</h3>
								<span class="business-count">{category.count} businesses</span>
							</div>
							<p>Find verified {category.name.toLowerCase()} businesses in {cityData.name}</p>
							<a href={`/${cityData.name.toLowerCase()}/${category.slug}`} class="btn btn-primary">
								Explore {category.name}
							</a>
						</div>
					))}
				</div>
			</div>
		</section>

		<section class="city-info">
			<div class="container">
				<h2>Why Choose Home Businesses in {cityData.name}?</h2>
				<div class="info-grid">
					<div class="info-card">
						<h3>üé≠ Cultural Authenticity</h3>
						<p>Home businesses in {cityData.name} offer traditional Tamil Nadu culture through authentic products and services with deep cultural roots.</p>
					</div>
					<div class="info-card">
						<h3>‚úÖ Verified & Trusted</h3>
						<p>All businesses are thoroughly verified to ensure quality and reliability for {cityData.name} customers.</p>
					</div>
					<div class="info-card">
						<h3>ü§ù Support Local Economy</h3>
						<p>By choosing local home businesses, you're directly supporting {cityData.name}'s entrepreneurial community and cultural preservation.</p>
					</div>
					<div class="info-card">
						<h3>üöÄ Traditional Excellence</h3>
						<p>Experience the best of {cityData.name}'s traditional craftsmanship and authentic flavors from skilled home entrepreneurs.</p>
					</div>
				</div>
			</div>
		</section>

		<section class="local-seo-content">
			<div class="container">
				<h2>About {cityData.name}'s Home Business Community</h2>
				<div class="content-grid">
					<div class="content-text">
						<p>{cityData.name}, with a population of {cityData.population}, is renowned as the {cityData.knownFor}. This vibrant metropolitan city is home to a thriving community of home-based entrepreneurs who preserve and promote traditional Tamil culture through their businesses.</p>
						
						<p>LocalBasket connects you with verified home businesses across {cityData.name}, from traditional food artisans in T. Nagar to skilled craft makers in Mylapore. Our platform ensures authenticity while supporting the local cultural economy.</p>
						
						<h3>Popular Areas in {cityData.name} for Home Businesses:</h3>
						<ul>
							<li>T. Nagar - Known for traditional South Indian sweets and snacks</li>
							<li>Mylapore - Hub for handmade temple crafts and religious items</li>
							<li>Adyar - Growing community of modern home service providers</li>
							<li>Velachery - Traditional businesses with authentic Tamil recipes</li>
							<li>Anna Nagar - Contemporary home businesses serving IT professionals</li>
						</ul>
					</div>
					
					<div class="content-sidebar">
						<div class="quick-stats">
							<h3>Quick Stats</h3>
							<ul>
								<li><strong>City:</strong> {cityData.name}</li>
								<li><strong>State:</strong> {cityData.state}</li>
								<li><strong>Population:</strong> {cityData.population}</li>
								<li><strong>Known For:</strong> {cityData.knownFor}</li>
								<li><strong>Businesses:</strong> {cityData.businessCount}+</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
.city-hero {
	background: linear-gradient(135deg, var(--primary-orange) 0%, var(--primary-green) 100%);
	color: white;
	padding: 4rem 0;
}

.breadcrumb {
	margin-bottom: 2rem;
}

.breadcrumb ol {
	display: flex;
	list-style: none;
	gap: 0.5rem;
	font-size: 0.9rem;
}

.breadcrumb a {
	color: rgba(255, 255, 255, 0.8);
	text-decoration: none;
}

.breadcrumb a:hover {
	color: white;
}

.separator {
	color: rgba(255, 255, 255, 0.6);
	margin: 0 0.5rem;
}

.hero-content h1 {
	font-size: 3rem;
	margin-bottom: 1rem;
	font-weight: 700;
}

.lead {
	font-size: 1.25rem;
	margin-bottom: 2rem;
	opacity: 0.9;
	line-height: 1.6;
}

.city-stats {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
	gap: 2rem;
	margin-top: 2rem;
}

.stat-item {
	text-align: center;
}

.stat-item h3 {
	font-size: 2.5rem;
	font-weight: 700;
	margin-bottom: 0.5rem;
}

.categories-grid, .info-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	gap: 2rem;
	margin-top: 2rem;
}

.category-card, .info-card {
	background: white;
	padding: 2rem;
	border-radius: 12px;
	box-shadow: var(--shadow-md);
}

.category-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 1rem;
}

.business-count {
	background: var(--primary-orange);
	color: white;
	padding: 0.25rem 0.75rem;
	border-radius: 20px;
	font-size: 0.9rem;
}

.content-grid {
	display: grid;
	grid-template-columns: 2fr 1fr;
	gap: 3rem;
	margin-top: 2rem;
}

.content-text {
	line-height: 1.7;
}

.content-text ul {
	margin-top: 1rem;
	padding-left: 1.5rem;
}

.content-text li {
	margin-bottom: 0.5rem;
}

.content-sidebar {
	background: var(--neutral-100);
	padding: 2rem;
	border-radius: 12px;
	height: fit-content;
}

.quick-stats ul {
	list-style: none;
	padding: 0;
}

.quick-stats li {
	padding: 0.5rem 0;
	border-bottom: 1px solid var(--neutral-300);
}

section {
	padding: 4rem 0;
}

.container {
	max-width: 1200px;
	margin: 0 auto;
	padding: 0 1rem;
}

h2 {
	font-size: 2.5rem;
	text-align: center;
	margin-bottom: 2rem;
	color: var(--neutral-800);
}

.btn {
	display: inline-block;
	padding: 0.75rem 1.5rem;
	border-radius: 8px;
	text-decoration: none;
	font-weight: 500;
	text-align: center;
	transition: all 0.3s ease;
}

.btn-primary {
	background: var(--primary-orange);
	color: white;
}

.btn-primary:hover {
	background: var(--secondary-orange);
}

@media (max-width: 768px) {
	.hero-content h1 {
		font-size: 2rem;
	}
	
	.city-stats {
		grid-template-columns: repeat(2, 1fr);
	}
	
	.content-grid {
		grid-template-columns: 1fr;
	}
	
	.categories-grid, .info-grid {
		grid-template-columns: 1fr;
	}
}
</style>
